{
    "name": "ts-ps-template-leetcode",
    "description": "A local TypeScript environment that mirrors LeetCode's runtime with opinionated formatting rules.",
    "scripts": {
        "use-version": "pnpm env use --global $(cat .node-version)",
        "format": "biome format --write .",
        "new": "pnpm -s tsx --tsconfig tsconfig.json ./tools/new-problem.ts",
        "solve": "pnpm -s tsx --tsconfig tsconfig.json ./tools/run-problem.ts",
        "watch": "pnpm -s tsx --tsconfig tsconfig.json ./tools/watch-problem.ts"
    },
    "keywords": [
        "typescript",
        "ps",
        "problem solving",
        "algorithm",
        "template",
        "leetcode"
    ],
    "author": "moonseob",
    "license": "MIT",
    "engines": {
        "node": "22"
    },
    "engineStrict": true,
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/moonseob/ts-ps-template-leetcode.git"
    },
    "dependencies": {
        "@datastructures-js/binary-search-tree": "5.4.0",
        "@datastructures-js/deque": "1.0.8",
        "@datastructures-js/graph": "5.3.1",
        "@datastructures-js/heap": "4.3.7",
        "@datastructures-js/linked-list": "6.1.4",
        "@datastructures-js/priority-queue": "6.3.5",
        "@datastructures-js/queue": "4.3.0",
        "@datastructures-js/set": "4.2.2",
        "@datastructures-js/stack": "3.1.6",
        "@datastructures-js/trie": "4.2.3",
        "lodash": "4.17.21"
    },
    "devDependencies": {
        "@biomejs/biome": "2.3.11",
        "@types/lodash": "^4.17.23",
        "@types/node": "^22.14.0",
        "tsx": "^4.20.4",
        "typescript": "5.7.3"
    }
}
