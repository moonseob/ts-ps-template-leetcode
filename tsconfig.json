{
    "compilerOptions": {
        "alwaysStrict": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"]
        },
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "target": "ES2024",
        "strictNullChecks": true,
        "module": "nodenext",
        "moduleResolution": "nodenext"
    },
    "include": ["src/**/*", "tools/**/*", "setup.ts"]
}
